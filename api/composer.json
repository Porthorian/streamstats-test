{
    "name": "porthorian/streamstats",
    "description": "Streamlabs interview project",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vinnie Marone",
            "email": "vinnie.marone35@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "porthorian/pdo-wrapper": "^1.2",
        "porthorian/db-entity": "^0.0.1",
        "porthorian/utility": "^0.1.0",
        "slim/slim": "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Porthorian\\StreamStats\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Porthorian\\StreamStats\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "cover": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpcs --extensions=php -s",
        "beautify": "vendor/bin/phpcbf --extensions=php -v"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
